<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    style="@style/background_style" 
    tools:context="com.example.contactmanager.ViewContact" >
      
    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder_person" />
        
    <TextView 
        android:id="@+id/view_contact_cmd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/view_contact_actions"
        android:textSize="14sp"
        android:textColor="@color/phone_number_color"
        android:layout_marginLeft="8dp"
        />
    
    <ListView
        android:id="@+id/listViewContactDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        />
    
</LinearLayout>
